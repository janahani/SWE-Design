@model List<Gym_Web_Application.Models.EmployeeModel> 
@inject AttendanceService _attendanceService 
@{
    ViewData["Title"] = "Attendance";
}

<div class="container-fluid pt-3">
    <div class="row removable">
        <div class="col-lg">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h1 class="mb-0">Employees</h1>
                        </div>
                        <div class="col text-right">
                            <input class="table-search-bar" placeholder="Search for Employee">
                        </div>
                        <div class="col text-right">
                            <h3 class="btn-add">Attendance for @DateTime.Today.ToString("MM/dd/yyyy")</h3>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <form method="post" action="/Attendance/MarkAttendance" id="attendanceForm">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Attendance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <th scope="row">@employee.ID</th>
                                        <td>@employee.Name</td>
                                        <td>@employee.Email</td>
                                        <td>@employee.PhoneNumber</td>
                                        <td>
                                           @{
                                        bool hasAttended = _attendanceService.HasAttended(employee.ID, DateTime.Today); }
                                        <input type="checkbox" name="attendedEmployees[@employee.ID]" value="true" class="btn-check" @(hasAttended ? "checked" : "") />
                                        <input type="hidden" name="attendedEmployees[@employee.ID]" value="false" />
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-right">
            <button type="button" id="attendance-submit" class="btn btn-primary">Submit Attendance</button>
        </div>
    </div>
</div>
<script>
    function filterEmployees() {
        var searchText = document.querySelector('.table-search-bar').value.toLowerCase();

        var rows = document.querySelectorAll('tbody tr');

        rows.forEach(function(row) {
            var nameColumn = row.querySelector('td:nth-child(2)');
            if (nameColumn) {
                var name = nameColumn.textContent.toLowerCase();
                if (name.includes(searchText)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        });
    }

    document.querySelector('.table-search-bar').addEventListener('input', filterEmployees);
</script>

<script>
    document.getElementById('attendance-submit').addEventListener('click', function() {
        document.getElementById('attendanceForm').submit();
    });
</script>


