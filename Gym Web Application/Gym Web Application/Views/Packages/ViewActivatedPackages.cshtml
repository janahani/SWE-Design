@{
    ViewData["Title"] = "Memberships";
}
@model Gym_Web_Application.Models.MembershipModel

<div class="container-fluid pt-3">
    <div class="row removable">
        <div class="col-lg">
            <h1 class="centeredHeader">Book Membership for <span>@(ViewBag.Client.FirstName + " " + ViewBag.Client.LastName + " " + ViewBag.Client.ID)</span></h1>
            <div class="packageContainer">
                @foreach (var package in ViewBag.Packages)
                {
                    <div class="packageBox">
                        <h3>@package.Title</h3>
                        <div class="packageContent">
                            <div class="packageText">
                                <p><span>@package.VisitsLimit Visits Limit</span></p>
                                <p><span>@package.NumOfInvitations Invitations</span></p>
                                <p><span>@package.NumOfInbodySessions Inbody Sessions</span></p>
                                <p><strong>For: <span>@package.Price L.E</span></strong></p>
                                <form method="post" asp-controller="Memberships" asp-action="ActivateMembership">
                                    <input type="hidden" name="id" value="@ViewBag.Client.ID" />
                                    <input type="hidden" name="packageID" value="@package.ID" />
                                    <button class="btn-package" type="submit">Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
